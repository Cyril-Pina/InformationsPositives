<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:startColor="@color/colorPrimary"
                android:endColor="@color/colorAccent"
                android:angle="90" />
            <corners
                android:radius="@dimen/radius_rounded_gradient_child"/>
        </shape>
    </item>

    <item
        android:top="@dimen/size_stroke"
        android:bottom="@dimen/size_stroke"
        android:left="@dimen/size_stroke"
        android:right="@dimen/size_stroke">
        <shape android:shape="rectangle" >
            <solid android:color="@android:color/white" />
            <corners
                android:radius="@dimen/radius_rounded_gradient_parent" />
        </shape>
    </item>

</layer-list>