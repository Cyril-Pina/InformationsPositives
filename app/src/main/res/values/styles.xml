<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorOnBackground">@color/colorDefaultLayout</item>
        <item name="colorBackgroundFloating">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="searchIcon">@drawable/search_selector</item>
        <item name="leftArrowIcon">@drawable/left_arrow_selector</item>
        <item name="likeAnim">@raw/like_anim</item>
    </style>

    <style name="AppTheme.Dark.NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorOnBackground">@color/colorLightBlack</item>
        <item name="colorBackgroundFloating">@android:color/black</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="searchIcon">@drawable/search_white_selector</item>
        <item name="leftArrowIcon">@drawable/left_arrow_white_selector</item>
        <item name="likeAnim">@raw/black_like_anim</item>
    </style>

    <style name="AppTheme.NoActionBar.Transparent" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_divider</item>
        <item name="android:background">?android:attr/listDivider</item>
        <item name="android:color">@android:color/darker_gray</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/made_tommy_bold</item>
        <item name="android:windowBackground">@drawable/rounded_gradient_stroke_layer_list</item>
    </style>

    <style name="AlertDialogDarkCustom" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/made_tommy_bold</item>
        <item name="android:windowBackground">@drawable/rounded_gradient_stroke_dark_layer_list</item>
    </style>

    <style name="DateFilterSpinnerStyle" parent="AlertDialogCustom">
        <item name="android:datePickerStyle">@style/DatePickerSpinner</item>
    </style>

    <style name="DateFilterSpinnerDarkStyle" parent="AlertDialogDarkCustom">
        <item name="android:datePickerStyle">@style/DatePickerSpinner</item>
    </style>

    <style name="DatePickerSpinner" parent="android:Widget.Material.DatePicker">
        <item name="android:datePickerMode">spinner</item>
    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/louis_george_cafe</item>
    </style>
</resources>